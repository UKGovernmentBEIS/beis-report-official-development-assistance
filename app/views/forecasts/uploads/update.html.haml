= content_for :page_title_prefix, t("page_title.forecast.upload")

%main.govuk-main-wrapper#main-content{ role: "main" }
  - unless @success
    .govuk-grid-row
      .govuk-grid-column-two-thirds
        %h1.govuk-heading-xl
          = t("page_title.forecast.upload")

    - if @errors.any?
      .govuk-grid-row
        .govuk-grid-column-full
          = render partial: "error_table"

    .govuk-grid-row
      .govuk-grid-column-two-thirds
        = render partial: "upload_form"

  - else
    .govuk-grid-row
      .govuk-grid-column-two-thirds
        %h1.govuk-heading-xl
          = t("importer.success.heading")

    .govuk-grid-row
      .govuk-grid-column-full
        = render partial: "shared/forecasts/forecasts_by_activity"

  .govuk-grid-row
    .govuk-grid-column-two-thirds
      %p.govuk-body= link_to t("action.forecast.upload.back_link"), report_forecasts_path(@report_presenter), class: "govuk-link"
