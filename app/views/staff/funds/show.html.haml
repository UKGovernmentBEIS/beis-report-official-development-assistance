=content_for :page_title_prefix, t("page_title.fund.show", name: @fund.name)

%p
  = link_to t("generic.link.back"), funds_path, class: "govuk-back-link"
%main.govuk-main-wrapper#main-content{ role: "main" }
  .govuk-grid-row
    .govuk-grid-column-two-thirds
      %h1.govuk-heading-xl
        = @fund.name

  .govuk-grid-row
    .govuk-grid-column-two-thirds
      %dl
        %dt
          = t("page_content.fund.name.label")
        %dd
          = @fund.name
        %dt
          = t("page_content.fund.organisation.label")
        %dd
          = link_to @fund.organisation.name, organisation_path(@fund.organisation)

    .govuk-grid-column-one-third
      %h2.govuk-heading-m
        = t("page_content.fund.activity")

      - if @fund.activity
        = link_to @fund.activity.identifier, activity_path(@fund.activity)
      - else
        = link_to(t("page_content.fund.button.create_activity"), new_fund_activity_path(@fund), class: "govuk-button")
