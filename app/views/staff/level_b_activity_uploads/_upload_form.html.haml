.govuk-grid-row
  .govuk-grid-column-full
    = form_with model: @organisation_presenter, url: organisation_level_b_activity_upload_path do |f|

      = f.govuk_file_field :activity_csv,
        label: { text: t("form.label.activity.csv_file_recover_from_error") },
        hint: { text: t("form.hint.activity.csv_file_recover_from_error_html", link: organisation_level_b_activity_upload_path) }

      = f.govuk_submit t("action.activity.upload.button")
