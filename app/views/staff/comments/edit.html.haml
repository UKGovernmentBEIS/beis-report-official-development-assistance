=content_for :page_title_prefix, t("page_title.comment.edit")

%main.govuk-main-wrapper#main-content{ role: "main" }
  .govuk-grid-row
    .govuk-grid-column-full
      %h1.govuk-heading-xl
        = @report.description

  .govuk-grid-row
    .govuk-grid-column-full
      %h2.govuk-heading-l
        = t("page_content.comment.edit")

  .govuk-grid-row
    .govuk-grid-column-full
      = form_with model: @comment, url: activity_comment_path do |f|
        = f.govuk_error_summary
        = f.govuk_text_area :comment
        = f.govuk_submit t("default.button.submit")
