= content_for :page_title_prefix, t("page_title.report.activate.confirm", report_organisation: @report.organisation.name, report_financial_quarter: @report_presenter.financial_quarter_and_year)

%main.govuk-main-wrapper#main-content{ role: "main" }
  .govuk-grid-row
    .govuk-grid-column-two-thirds
      %h1.govuk-heading-xl
        = t("page_title.report.activate.confirm", report_financial_quarter: @report_presenter.financial_quarter_and_year, report_organisation: @report.organisation.name)

      = form_for @report_presenter, url: report_state_path(@report_presenter) do |f|
        = hidden_field_tag :state, "active"
        = f.govuk_submit t("action.report.activate.confirm.button")
