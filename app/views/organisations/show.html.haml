=content_for :page_title_prefix, t("page_title.organisation", name: @organisation.name)

%p
  = link_to t("generic.link.back"), organisations_path, class: "govuk-back-link"
%main.govuk-main-wrapper#main-content{ role: "main" }
  .govuk-grid-row
    .govuk-grid-column-two-thirds
      %h1.govuk-heading-xl
        = @organisation.name

  .govuk-grid-row
    .govuk-grid-column-two-thirds
      %dl
        %dt
          = t("organisation.name")
        %dd
          = @organisation.name
        %dt
          = t("organisation.type")
        %dd
          = t("organisation.organisation_type.#{@organisation.organisation_type}")
        %dt
          = t("organisation.language_code")
        %dd
          = t("organisation.language_code.#{@organisation.language_code.downcase}")
        %dt
          = t("organisation.default_currency")
        %dd
          = t("organisation.default_currency.#{@organisation.default_currency.downcase}")
