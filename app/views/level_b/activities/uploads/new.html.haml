= content_for :page_title_prefix, t("page_title.activity.upload_level_b", organisation_name: @organisation_presenter.name)

%main.govuk-main-wrapper#main-content{ role: "main" }
  .govuk-grid-row
    .govuk-grid-column-two-thirds
      %h1.govuk-heading-xl
        = t("page_title.activity.upload_level_b", organisation_name: @organisation_presenter.name)

      = t("action.activity.download.hint_level_b_html")

  .govuk-grid-row
    .govuk-grid-column-two-thirds
      %h2.govuk-heading-m
        = t("action.activity.type.ispf_oda")

      %p.govuk-body
        = link_to t("action.activity.download.link", type: t("action.activity.type.ispf_oda")),
          organisation_level_b_activities_upload_path(@organisation_presenter.id, type: :ispf_oda, format: :csv),
          class: "govuk-link"

      = render partial: "shared/activities/uploads/upload_form", locals: { instance: @organisation_presenter, path_helper: "organisation_level_b_activities_upload_path", type: :ispf_oda }

      %hr.govuk-section-break.govuk-section-break--l.govuk-section-break--visible

      %h2.govuk-heading-m
        = t("action.activity.type.non_ispf")

      %p.govuk-body
        = link_to t("action.activity.download.link", type: t("action.activity.type.non_ispf")),
          organisation_level_b_activities_upload_path(@organisation_presenter.id, type: :non_ispf, format: :csv),
          class: "govuk-link"

      = render partial: "shared/activities/uploads/upload_form", locals: { instance: @organisation_presenter, path_helper: "organisation_level_b_activities_upload_path", type: :non_ispf }

      %hr.govuk-section-break.govuk-section-break--l.govuk-section-break--visible

  .govuk-grid-row
    .govuk-grid-column-two-thirds
      %p.govuk-body= link_to "Back to home", home_path
